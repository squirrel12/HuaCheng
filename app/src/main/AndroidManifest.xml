<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ett.csz.huacheng">

    <!--  申明网络权限   -->
      
    <uses-permission android:name="android.permission.INTERNET" />
     
    <!-- 申明相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
     
    <!--  申明权限 操作SD卡  -->
        
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
     
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".ui.MainActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".ui.UpdatePWDActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".ui.UserCenterActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".ui.EditJobActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".ui.FinishedJobsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".ui.QueryJobsActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity
            android:name=".ui.JobListActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".ui.JobDetailsActivity" />
        <activity
            android:name=".base.BaseActivity"
            android:label="@string/title_activity_base"></activity>
    </application>

</manifest>