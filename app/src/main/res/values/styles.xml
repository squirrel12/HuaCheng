<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">

    </style>


    <style name="AppTheme.AppBarOverlay" parent="android:Theme.Black.NoTitleBar" />

    <style name="AppTheme.PopupOverlay" parent="android:Theme.Black.NoTitleBar" />
    <style name="Item_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--顶部标题样式-->
    <style name="Activity_Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--列表标题样式-->
    <style name="Title_Table">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <!--按钮样式-->
    <style name="Btn_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--列表样式-->
    <style name="List_Style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--工单详情标题样式-->
    <style name="Detail_Style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--工单详情内容样式-->
    <style name="Detail_Content_Style">
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
